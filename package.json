{
  "name": "ralph-vscode-alephium",
  "displayName": "Ralph (Alephium)",
  "description": "Alephium Ralph language for Visual Studio code",
  "version": "0.3.3",
  "engines": {
    "vscode": "^1.69.0",
    "node": ">=v18.0.0"
  },
  "keywords": [
    "ralph",
    "RALPH",
    "Ralph",
    "plugin",
    "prettier",
    "alephium"
  ],
  "publisher": "alephium",
  "author": "Alephium devs <devs@alephium.org>",
  "contributors": [
    {
      "email": "syl416419@gmail.com",
      "name": "suyanlong"
    }
  ],
  "license": "GUN3",
  "bugs": {
    "url": "https://github.com/alephium/ralph-vscode/issues"
  },
  "homepage": "https://github.com/alephium/ralph-vscode#readme",
  "repository": "git+https://github.com/alephium/ralph-vscode.git",
  "categories": [
    "Programming Languages",
    "Snippets",
    "Formatters",
    "Linters",
    "Other"
  ],
  "icon": "logo.png",
  "main": "./dist/extension.js",
  "activationEvents": [
    "onLanguage:ralph",
    "onCommand:ralph.compile",
    "onCommand:ralph.deploy"
  ],
  "contributes": {
    "commands": [
      {
        "command": "ralph.compile",
        "title": "Ralph Compile"
      },
      {
        "command": "ralph.deploy",
        "title": "Ralph Deploy To Devnet"
      }
    ],
    "configuration": {
      "title": "Ralph settings",
      "properties": {
        "ralph.compile.cliVersion": {
          "type": "string",
          "default": "latest",
          "description": "The version of CLI for compilation"
        },
        "ralph.compile.command": {
          "type": "string",
          "default": "npx --yes @alephium/cli compile -n devnet",
          "description": "The command to compile Ralph projects"
        }
      }
    },
    "languages": [
      {
        "id": "ralph",
        "aliases": [
          "ralph",
          "RALPH",
          "Ralph"
        ],
        "extensions": [
          ".ral"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./logo.png",
          "dark": "./logo.png"
        }
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "ralph.compile",
          "when": "resourceLangId == ralph",
          "group": "1_ralph@1"
        },
        {
          "command": "ralph.deploy",
          "when": "resourceLangId == ralph",
          "group": "1_ralph@2"
        }
      ]
    },
    "grammars": [
      {
        "language": "ralph",
        "scopeName": "source.ral",
        "path": "./syntaxes/ralph.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "ralph",
        "path": "./snippets/snippets.code-snippets"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts,js --fix",
    "fmt": "prettier --write .",
    "test": "jest",
    "antlr4ts": "antlr4ts -visitor ./src/parser/*.g4"
  },
  "dependencies": {
    "@alephium/cli": "0.3.0-rc.7",
    "@alephium/web3": "0.3.0-rc.7",
    "@alephium/web3-test": "0.3.0-rc.7",
    "antlr4ts": "0.5.0-alpha.4",
    "execa": "^6.1.0",
    "immutable": "^4.2.1",
    "node-fetch": "^3.3.0",
    "prettier": "^2.8.1",
    "request": "^2.88.2",
    "request-progress": "^3.0.0",
    "request-promise-native": "^1.0.9"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/crypto-js": "^4.1.1",
    "@types/node": "^18.11.18",
    "@types/prettier": "^2.7.2",
    "@types/request": "^2.48.8",
    "@types/request-promise-native": "^1.0.18",
    "@types/vscode": "1.69.0",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "antlr4ts-cli": "0.5.0-alpha.4",
    "assert": "^2.0.0",
    "chai": "^4.3.7",
    "eslint": "8.22.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-import-resolver-webpack": "^0.13.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.3.1",
    "prettier-eslint": "^15.0.1",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.4",
    "vsce": "^2.15.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^4.10.0"
  }
}
