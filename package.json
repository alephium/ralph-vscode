{
  "name": "ralph-vscode",
  "displayName": "ralph vscode",
  "description": "ralph vscode",
  "version": "0.0.9",
  "engines": {
    "vscode": "^1.69.0",
    "node": ">=v18.0.0"
  },
  "keywords": [
    "ralph",
    "RALPH",
    "Ralph",
    "plugin",
    "prettier",
    "alephium"
  ],
  "publisher": "592938410",
  "author": "suyanlong <syl416419@gmail.com>",
  "contributors": [
    {
      "email": "syl416419@gmail.com",
      "name": "suyanlong"
    }
  ],
  "license": "GUN3",
  "bugs": {
    "url": "https://github.com/alephium/ralph-vscode/issues"
  },
  "homepage": "https://github.com/alephium/ralph-vscode#readme",
  "repository": "git+https://github.com/alephium/ralph-vscode.git",
  "categories": [
    "Programming Languages",
    "Snippets",
    "Formatters",
    "Linters",
    "Other"
  ],
  "icon": "logo.png",
  "main": "./dist/extension.js",
  "activationEvents": [
    "onLanguage:ralph",
    "onCommand:ralph.compiler",
    "onCommand:ralph.downloader"
  ],
  "contributes": {
    "commands": [
      {
        "command": "ralph.downloader",
        "title": "Ralph: downloader"
      },
      {
        "command": "ralph.compiler",
        "title": "Ralph: compile"
      }
    ],
    "configuration": {
      "title": "Ralph settings",
      "properties": {
        "ralph.downloader.config.name": {
          "type": "string",
          "description": "compile name",
          "default": "ralphc"
        },
        "ralph.downloader.config.url": {
          "type": "string",
          "description": "download link",
          "default": "https://github.com/alephium/ralphc/releases/download/v1.5.0-rc11/ralphc.jar"
        },
        "ralph.downloader.config.target": {
          "type": "string",
          "description": "local place",
          "default": "ralphc.jar"
        },
        "ralph.compiler.command": {
          "type": "string",
          "description": "compile command"
        },
        "ralph.compiler.option.ignoreUnusedConstantsWarnings": {
          "type": "boolean",
          "default": false,
          "description": "ignore unused constants warning"
        },
        "ralph.compiler.option.ignoreUnusedVariablesWarnings": {
          "type": "boolean",
          "default": false,
          "description": "ignore unused variables warning"
        },
        "ralph.compiler.option.ignoreUnusedFieldsWarnings": {
          "type": "boolean",
          "default": false,
          "description": "ignore unused fields warning"
        },
        "ralph.compiler.option.ignoreReadonlyCheckWarnings": {
          "type": "boolean",
          "default": false,
          "description": "ignore readonly check warning"
        },
        "ralph.compiler.option.ignoreUnusedPrivateFunctionsWarnings": {
          "type": "boolean",
          "default": false,
          "description": "ignore unused private functions warning"
        },
        "ralph.compiler.option.ignoreExternalCallCheckWarnings": {
          "type": "boolean",
          "default": false,
          "description": "ignore external call check warning"
        },
        "ralph.compiler.option.projectDir": {
          "type": "string",
          "default": "",
          "description": "project path"
        },
        "ralph.compiler.option.warningAsError": {
          "type": "boolean",
          "default": false,
          "description": "Consider warnings as errors"
        },
        "ralph.compiler.option.debug": {
          "type": "boolean",
          "default": false,
          "description": "debug mode"
        }
      }
    },
    "languages": [
      {
        "id": "ralph",
        "aliases": [
          "ralph",
          "RALPH",
          "Ralph"
        ],
        "extensions": [
          ".ral"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./logo.png",
          "dark": "./logo.png"
        }
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "ralph.compiler",
          "when": "resourceLangId == ralph",
          "group": "navigation@1"
        },
        {
          "command": "ralph.downloader",
          "when": "resourceLangId == ralph",
          "group": "navigation@2"
        }
      ]
    },
    "grammars": [
      {
        "language": "ralph",
        "scopeName": "source.ral",
        "path": "./syntaxes/ralph.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "ralph",
        "path": "./snippets/snippets.code-snippets"
      }
    ],
    "themes": [
      {
        "label": "Ralph Visual Developer Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/OneDarkAuditor.json"
      },
      {
        "label": "Ralph Visual Developer Solarized Light",
        "uiTheme": "vs",
        "path": "./themes/solarized-light-color-theme.json"
      },
      {
        "label": "Ralph Visual Developer Light (Visual Studio)",
        "uiTheme": "vs",
        "path": "./themes/light_vs.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts,js --fix",
    "fmt": "prettier --write .",
    "test": "jest",
    "antlr4ts": "antlr4ts -visitor ./src/parser/*.g4"
  },
  "dependencies": {
    "antlr4ts": "^0.5.0-alpha.4",
    "execa": "^6.1.0",
    "node-fetch": "^3.2.10",
    "prettier": "^2.7.1",
    "request": "^2.88.2",
    "request-progress": "^3.0.0",
    "request-promise-native": "^1.0.9"
  },
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/node": "^18.8.2",
    "@types/prettier": "^2.7.1",
    "@types/request-promise-native": "^1.0.18",
    "@types/vscode": "1.69.0",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.39.0",
    "antlr4ts-cli": "^0.5.0-alpha.4",
    "assert": "^2.0.0",
    "chai": "^4.3.6",
    "eslint": "8.22.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-import-resolver-webpack": "^0.13.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.1.2",
    "prettier-eslint": "^15.0.1",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "vsce": "^2.10.2",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  }
}
